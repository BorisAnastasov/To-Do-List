<Window x:Class="to_do_list.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:to_do_list"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="inputBox"  HorizontalAlignment="Left" Height="41" Margin="154,102,0,0" TextWrapping="Wrap" Text="Text" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" VerticalAlignment="Top" Width="219" TextChanged="TextBox_TextChanged" TextAlignment="Center" Background="#FF878787" BorderBrush="White" Foreground="White" Cursor="Hand" FontFamily="Arial" FontSize="16" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center"/>
        <Button x:Name="AddBtn" Content="Add Task" HorizontalAlignment="Left" Height="41" Margin="486,102,0,0" VerticalAlignment="Top" Width="147" Click="Button_Click" FontSize="18" FontFamily="Arial" Background="Red" BorderBrush="{x:Null}" FontWeight="Bold" Foreground="White"/>
        <StackPanel HorizontalAlignment="Left" Height="135" Margin="277,200,0,0" VerticalAlignment="Top" Width="230"/>
    </Grid>
</Window>
